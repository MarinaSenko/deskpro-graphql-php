{
    "name": "deskpro/graphql-php",
    "description": "PHP library that queries the Deskpro GraphQL API.",
    "type": "library",
    "config": {
        "platform": {
            "php": "5.5"
        }
    },
    "keywords": [
        "deskpro",
        "graphql",
        "api"
    ],
    "authors": [
        {
            "name": "The Deskpro Team",
            "email": "team@deskpro.com"
        }
    ],
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-0": {
            "Deskpro\\": "src/"
        }
    },
    "scripts": {
